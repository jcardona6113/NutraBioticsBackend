                    $("#ContactId").empty();
                    $.ajax({
                        type: 'POST',
                        url: '@Url.Action("GetContactList")',
                        dataType: 'json',
                        data: { ShipToId: $("#ShipToId").val() },
                        success: function (contacts) {
                            $.each(contacts, function (i, contact) {
                                $("#ContactId").append('<option value="'
                                    + contact.ContactId + '">'
                                    + contact.Name + '</option>');
                            });
                        },
                    });
                });
            };
