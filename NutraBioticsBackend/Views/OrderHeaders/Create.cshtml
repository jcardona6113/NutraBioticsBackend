    <script type="text/javascript">

                    $(document).ready(function () {
                        $("#btnShowModal").click(function () {
                            var ClienteSeleccionado = $('#CustomerId').val();

                            if (ClienteSeleccionado == 0)
                            {
                                alert("Seleccione un cliente.");
                                return false;
                            }

                           // $("#PacienteEncontrado").prop("value", '');
                            $("#sName").prop("value", '');
                          //  $("#ShiptoName2").prop("value", '');
                            $("#CedulaPaciente").prop("value", '');
                            $("#ContactId").empty();

                            $("#loginModal").modal('show');
                            $("#CedulaPaciente").focus();
                        });

                        $("#SearchShiptoCompleted").click(function () {
                            $("#loginModal").modal('hide');
                            $.ajax({
                                type: 'POST',
                                url: '@Url.Action("GetContactList")',
                                dataType: 'json',
                                data: { ShipToId: $("#sID").val() },
                                success: function (contacts) {
                                    $.each(contacts, function (i, contact) {
                                        $("#ContactId").append('<option value="'
                                            + contact.ContactId + '">'
                                            + contact.Name + '</option>');
                                    });
                                },
                            });
                        });

                        $("#btnSearch").click(function () {
                            $.ajax({
                                url: '@Url.Action("SearchShipTo")',
                                dataType: 'json',
                                type: "POST",
                                data: { CustomerId: $("#CustomerId").val(), ShipToNum: $("#CedulaPaciente").val() },
                                success: function (shipto) {
                                    if (shipto.ShipToNum != "99999") {
                                        $("#sName").prop("value", shipto.ShipToName);
                                        //$("#ShiptoName2").prop("value", shipto.ShipToName);
                                        //$("#PacienteEncontrado").prop("value", shipto.ShipToNum);
                                        $("#sID").empty();
                                        $("#sID").append('<option value="'
                                            + shipto.ShipToId + '">'
                                            + shipto.ShipToName + '</option>');
                                    }
                                    else {
                                        alert("No Encontrado");
                                    }
                                },
                            });
                            return false;

                        });
        });


    </script>

